!!! namespace tests.complex

/
  Complex template

  @param list Some list
  @param id Id
  @param description Description
  @param isSomething
#complex
  #xlist.xlist-{$id}{:data-id=>"{$id}"}
    .header
      %h1 {$description}
    {call .listActions data="all" /}
    .row
      {foreach $item in $list}
        {call .itemRender}
          {param item: $item /}
        {/call}
      {/foreach}

/
  Complex template 2

  @param obj Object
#complex2
  .item.span2{:data-id=>"{$obj.id}", :data-details=>"{$obj.details}"}
    .row
      %img{:src=>"{$obj.image}", :alt=>"", :height=>""}
    .row
      %h2
        %a{:href=>"https://short.ly/{$obj.shrt}"} {$obj.name}
        {if $obj.comment}
          .comment {$obj.comment}
        {/if}
    .row
      %ul.unstyled
        {foreach $some in $obj.somes}
          %li {$some.name}
        {/foreach}
        %li
          %a.btn{:href=>"#"} +1